<PropertyList>

 <fx>
 
  <engine>
        <name>engineidle</name>
        <path>Aircraft/LCR/Sounds/LCR-F2-engine.wav</path>
        <mode>looped</mode>
         <condition>
         <less-than> 
            <property>engines/engine/rpm</property>
            <value>1200</value>
          </less-than>
          <greater-than> 
            <property>engines/engine/rpm</property>
            <value>0</value>
          </greater-than>
        </condition>
        <volume>
          <property>engines/engine/mp-osi</property>
          <factor>0.1</factor>
          <min>1.3</min>
          <max>10.25</max>
          <offset>0.001</offset>
        </volume>
	    <pitch>
	      <property>engines/engine/rpm</property>
	      <factor>0.00012</factor>
	      <min>0.001</min>
	      <max>7.0</max>
	      <offset>0.002</offset>
	    </pitch>
        <reference-dist>10</reference-dist>
        <max-dist>500</max-dist>
      </engine>

    <engine>
        <name>engine</name>
        <path>Aircraft/LCR/Sounds/LCR-engine.wav</path>
        <mode>looped</mode>
         <condition>
          <greater-than>
            <property>engines/engine/rpm</property>
            <value>1200</value>
          </greater-than>
        </condition>
        <volume>
          <property>engines/engine/mp-osi</property>
          <factor>0.05</factor>
          <min>1.3</min>
          <max>5.25</max>
          <offset>0.001</offset>
        </volume>
        <pitch>
          <property>engines/engine/rpm</property>
          <factor>0.0001</factor>
          <min>0.001</min>
          <max>3.0</max>
          <offset>0.015</offset>
        </pitch>
        <reference-dist>10</reference-dist>
        <max-dist>1100</max-dist>
      </engine>

