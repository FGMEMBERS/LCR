<PropertyList>

  <name>config</name>
  <modal>false</modal>
  <layout>vbox</layout>
  <padding>20</padding>

  <group>
    <layout>hbox</layout>
    <empty>
      <stretch>1</stretch>
    </empty>		
    <text>
      <label>Roadrace settings</label>
    </text>
    <empty>
      <stretch>1</stretch>
    </empty>
    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

  <hrule/>

      <layout>hbox</layout>
  	  <group>
  	    <layout>hbox</layout>
  	    <text>
  	      <label>Isle of Man - Tourist Trophy (EGNS) ..............................................</label>
  	      <halign>left</halign>
  	    </text>
  	    <input>
  	      <property>/LCR/TT/race-laps</property>
  	      <type>INTEGER</type>
  	    </input>
  	    <text>
  	      <label>laps</label>
  	      <halign>right</halign>
  	    </text>
  	  </group>
	  
  	  <group>
  	    <layout>hbox</layout>
  	    <text>
  	      <label>Isle of Man - Southern 100 (EGNS) ...............................................</label>
  	      <halign>left</halign>
  	    </text>
  	    <input>
  	      <property>/LCR/S100/race-laps</property>
  	      <type>INTEGER</type>
  	    </input>
  	    <text>
  	      <label>laps</label>
  	      <halign>right</halign>
  	    </text>
  	  </group>
  	  <group>
  	    <layout>hbox</layout>
  	    <text>
  	      <label>Northern Ireland - North West 200 (EGAE) ..................................</label>
  	      <halign>left</halign>
  	    </text>
  	    <input>
  	      <property>/LCR/NW200/race-laps</property>
  	      <type>INTEGER</type>
  	    </input>
  	    <text>
  	      <label>laps</label>
  	      <halign>right</halign>
  	    </text>
  	  </group>

  	  <group>
  	    <layout>hbox</layout>
  	    <text>
  	      <label>Northern Ireland - Ulster Grand Prix (EGAA) ...............................</label>
  	      <halign>left</halign>
  	    </text>
  	    <input>
  	      <property>/LCR/UGP/race-laps</property>
  	      <type>INTEGER</type>
  	    </input>
  	    <text>
  	      <label>laps</label>
  	      <halign>right</halign>
  	    </text>
  	  </group>

  	  <group>
  	    <layout>hbox</layout>
  	    <text>
  	      <label>China - Macau Grand Prix (VMMC) ..............................................</label>
  	      <halign>left</halign>
  	    </text>
  	    <input>
  	      <property>/LCR/MGP/race-laps</property>
  	      <type>INTEGER</type>
  	    </input>
  	    <text>
  	      <label>laps</label>
  	      <halign>right</halign>
  	    </text>
  	  </group>

  	  <group>
  	    <layout>hbox</layout>
  	    <text>
  	      <label>Estland - Piritat-Kose-Klostrimetas Kalevi Circuit (EETN) ... </label>
  	      <halign>left</halign>
  	    </text>
  	    <input>
  	      <property>/LCR/KAL/race-laps</property>
  	      <type>INTEGER</type>
  	    </input>
  	    <text>
  	      <label>laps</label>
  	      <halign>right</halign>
  	    </text>
  	  </group>

  	  <group>
  	    <layout>hbox</layout>
  	    <text>
  	      <label>New Zealand - Hampton Downs (NZME)  ................................ </label>
  	      <halign>left</halign>
  	    </text>
  	    <input>
  	      <property>/LCR/HD/race-laps</property>
  	      <type>INTEGER</type>
  	    </input>
  	    <text>
  	      <label>laps</label>
  	      <halign>right</halign>
  	    </text>
  	  </group>

  	  <group>
  	    <layout>hbox</layout>
  	    <text>
  	      <label>New Zealand - Wanganui - Cemetery Circuit (NZWU)  ....... </label>
  	      <halign>left</halign>
  	    </text>
  	    <input>
  	      <property>/LCR/CC/race-laps</property>
  	      <type>INTEGER</type>
  	    </input>
  	    <text>
  	      <label>laps</label>
  	      <halign>right</halign>
  	    </text>
  	  </group>
	  
	  <hrule/>
	  
      <group>
        <layout>hbox</layout>
        <button>
          <legend>New Race</legend>
          <default>false</default>
          <binding>
            <command>nasal</command>
            <script>lcr.clear_race_datas();</script>
          </binding>
        </button>
      </group>

  <hrule/>

  <button>
    <legend>Close</legend>
    <default>true</default>
    <key>Esc</key>
    <binding>
      <command>dialog-apply</command>
    </binding>
    <binding>
      <command>dialog-close</command>
    </binding>
  </button>

  <nasal>
    <open></open>
  </nasal>
</PropertyList>
